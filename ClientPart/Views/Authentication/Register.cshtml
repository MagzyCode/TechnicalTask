@model RegistrationUserViewModel
@{
    var modelSelects = Model.Roles
       .Select(i => new SelectListItem() { Text = i, Value = i })
       .ToList();
}

<h2>Registration form</h2>
<br />
<form method="post" asp-controller="Authentication" asp-action="Register">
    <div class="form-group row">
        <label asp-for="FirstName" class="col-xs-2 col-form-label">First name</label>
        <br />
        <input asp-for="FirstName" class="form-control col-xs-2" type="text" id="example-text-input">
        <span asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group row">
        <label asp-for="LastName" class="col-xs-2 col-form-label">Last name</label>
        <br />
        <input asp-for="LastName" class="form-control col-xs-2" type="text" id="example-text-input">
        <span asp-validation-for="LastName"></span>
    </div>
    <div class="form-group row">
        <label asp-for="UserName" class="col-xs-2 col-form-label">User name</label>
        <br />
        <input asp-for="UserName" class="form-control col-xs-2" type="text" id="example-text-input">
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-xs-2 col-form-label">Password</label>
        <br />
        <input asp-for="Password" class="form-control col-xs-5" type="password" id="example-text-input">
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-xs-2 col-form-label">Email</label>
        <br />
        <input asp-for="Email" class="form-control col-xs-5" type="email" id="example-text-input">
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group row">
        <label asp-for="PhoneNumber" class="col-xs-2 col-form-label">Phone number</label>
        <br />
        <input asp-for="PhoneNumber" class="form-control col-xs-5" type="text" id="example-text-input">
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Roles" class="col-xs-2 col-form-label">Fridge model</label>
        <select class="form-control col-xs-5" asp-for="Roles" asp-items="@modelSelects"></select>
        <span asp-validation-for="Roles"></span>
    </div>

    <div class="form-group row">
        <button asp-controller="Authentication" asp-action="Register" type="submit" class="btn btn-primary mb-2">Registration</button>
    </div>
</form>

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}