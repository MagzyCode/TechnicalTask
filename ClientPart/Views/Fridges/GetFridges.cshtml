@model IEnumerable<FridgesViewModel>;

<h2>Все задачи</h2>
<br/>
<div>
    <div class="list-group">
        <table class="table">
            @foreach (var item in Model)
	        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.OwnerName</td>
                <td>
                    <form method="get">
                        <button type="submit" class="btn btn-primary mb-2" asp-controller="Fridges" asp-action="UpdateFridge" asp-route-id="@item.Id">Update</button>
                    </form>
                </td>
                <td>
                    <form method="get">
                        <button type="submit" class="btn btn-primary mb-2" asp-controller="Fridges" asp-action="DeleteFridge" asp-route-id="@item.Id">Delete</button>
                    </form>
                </td>
            </tr>
	        }
        </table>
    </div>
</div>
